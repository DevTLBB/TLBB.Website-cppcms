{
  "app" : {
    "root" : "",
    "host" : "localhost:8080",
    "locdomain" : "localhost",
    "db": {
      "web" : {
        "connection_string" : "mysql:database=web;user=root;password=;@pool_size=16"
      }
    }
  },
  "service" : {
    "ip"  : "0.0.0.0",
    "api" : "http",
    "port" : 8081
  },
  "http" : {
    "script" : "/mb.fcgi",
    "rewrite" : [
      { "regex" : "/media(/.+)", "pattern" : "$1" },
      { "regex" : "/favicon\\.ico", "pattern" : "$0" },
      { "regex" : "/robots\\.txt", "pattern" : "$0" },
      { "regex" : ".*" , "pattern" : "/mb.fcgi$0" }
    ]
  },
  "file_server" : {
    "enable" : true,
    "listing" : true,
    "document_root" : "../resources/media"
  },
  "views" : {
    "paths" : ["."],
    "skins" : ["bootstrap_skin"]
  },
  "security" : {
    "csrf" : { "enable" : true }
  }
}
